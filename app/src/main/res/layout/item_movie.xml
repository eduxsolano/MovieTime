<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewMovie"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@color/cardview_light_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageViewMovie"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/colorBlack" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageViewMovie"
            android:background="@drawable/gradient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewMovie"

                android:layout_marginBottom="-5dp"

                android:fontFamily="@font/sixcaps"

                android:textAllCaps="true"

                android:letterSpacing="0.1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="BUSQUEDA IMPLACABLE"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/textViewVotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:fontFamily="@font/archivonarrowregular"
                android:paddingLeft="13dp"
                android:text="Rating 3/10"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="visible" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>